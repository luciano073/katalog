<% content_for :title, navigation %>
<div class="col-sm-12 above_title"></div>
<div class="col-sm-12 title">
  <h5 class="text-center">Lista de Países</h5>
</div>

<div class="row paginate">
  <div class="col-sm-4"></div>
  <div class="col-sm-4 text-center">
    <%= paginate @countries %>
  </div>
  <div class="col-sm-4"></div>
</div>

<div class="col-sm-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Nome em Inglês</th>
        <th>Bandeira</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
  
    <tbody>
      <% @countries.each do |country| %>
        <tr>
          <td><%= link_to country.name, country %></td>
          <td><%= country.english_name %></td>
          <td><%= image_tag(country.flag_url(:_32)) %></td>
          <td><%= link_to 'Atualizar', edit_country_path(country), class: "btn btn-info btn-xs" %></td>
          <td><%= button_to 'Excluir', country, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <p class="text-center">
      <%= link_to 'Novo País', new_country_path, class: "btn btn-default btn-xs" %>
  </p>
  
</div>