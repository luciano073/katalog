$('div.upload').empty();

<% if @picture.new_record? %>
  alert("Failed to upload painting: <%= j @picture.errors.full_messages.join(', ').html_safe %>");
<% else %>
  $("#pictures").append("<%= j render(@picture) %>");
<% end %>

<% if @imageable.pictures.size >= 6 %>
  $('section#images').hide('slow');
<% end %>