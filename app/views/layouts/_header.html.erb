<!-- Fixed navbar -->
<header class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%#= link_to "KataLog", root_path, class: "navbar-brand" %>
      <%= link_to root_path, class: "navbar-brand", id: 'home' do %>
        <span class="glyphicon glyphicon-home"></span> KATALOG
      <% end -%>
      
    </div>

    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <%= content_tag :li, class: ("active" if params[:controller] == 'films') do %>
          <%= link_to films_path do %>
            <i class="fa fa-film fa-lg"></i> Filmes
          <% end %>
        <% end %>
        
        <%= content_tag :li, class: ("active" if params[:controller] == 'artists') do %>
          <%= link_to artists_path do %>
            <i class="fa fa-users fa-lg"></i> Artistas
          <% end %>
        <% end %>
        
        <li><a href="#contact"><i class="fa fa-video-camera fa-lg"></i> Blurays&DVDs</a></li>
        <li><a href="#contact"><i class="fa fa-book fa-lg"></i> Livros&HQs</a> </li>
        
      </ul>
      
      <%= form_tag(nil, class: "navbar-form navbar-left", role: 'search', id: 'f_search' ) do %>
        <!-- <input type="text" class="form-control" placeholder="&#xf002;" id="g_search"> -->
        <%= search_field_tag 'g_search', nil, class: "form-control", placeholder: "Buscar...",  autocomplete: 'off' %>
      
      <% end -%>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cadastro <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Novo Filme", new_film_path %></li>
            <li><%= link_to 'Novo Artista', new_artist_path %></li>
            <li><%= link_to 'Nova Profissão', new_profession_path %></li>
            <li><%= link_to 'Novo País', new_country_path %></li>
            <li class="divider"></li>
            <li><a href="#">Separated link</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</header>